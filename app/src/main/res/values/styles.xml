<resources>

    <!--White Theme Styles-->
    <style name="ToolbarOverlayStyle.White" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="iconTint">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="ToolbarStyle.White" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@android:color/white</item>
        <item name="titleTextColor">@android:color/black</item>
        <item name="android:theme">@style/ToolbarOverlayStyle.White</item>
    </style>

    <style name="BottomAppBarOverlayStyle.White" parent="ThemeOverlay.MaterialComponents.BottomAppBar.Primary">
        <item name="iconTint">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="BottomAppBarStyle.White" parent="Widget.MaterialComponents.BottomAppBar">
        <item name="android:background">@android:color/white</item>
        <item name="android:theme">@style/BottomAppBarOverlayStyle.White</item>
    </style>

    <!--Colored Theme Styles-->
    <style name="ToolbarOverlayStyle.Colored" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolbarStyle.Colored" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:theme">@style/ToolbarOverlayStyle.Colored</item>
    </style>

    <style name="BottomAppBarOverlayStyle.Colored" parent="ThemeOverlay.MaterialComponents.BottomAppBar.Primary">
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="BottomAppBarStyle.Colored" parent="Widget.MaterialComponents.BottomAppBar.Colored">
        <item name="android:theme">@style/BottomAppBarOverlayStyle.Colored</item>
    </style>

    <style name="OutlinedButtonStyle.Dark" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <!--Preference Theme-->
    <style name="PrefsTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>
</resources>
