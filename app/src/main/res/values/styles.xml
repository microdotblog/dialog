<resources>

    <!-- Empty Text style -->
    <style name="textEmptyStyle">
        <item name="android:textAppearance">@style/TextAppearance.Empty</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:drawablePadding">@dimen/padding</item>
        <item name="android:layout_marginLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/activity_horizontal_margin</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="TextAppearance.Empty" parent="TextAppearance.AppCompat.Headline">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="RippleStyle" parent="ThemeOverlay.MaterialComponents">
        <item name="colorControlHighlight">?attr/colorPrimaryVariant</item>
    </style>

    <style name="ToolbarOverlayStyle" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>
</resources>
